<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WorkTimeTrackerManager" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WorkTimeTrackerManager.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowNoTitle">true</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_background</item>
        <item name="windowSplashScreenBackground">#54759E</item>
        <item name="postSplashScreenTheme">@style/Theme.WorkTimeTrackerManager</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>